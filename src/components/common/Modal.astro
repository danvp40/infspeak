---
import { getAsset } from '~/utils/permalinks';

export interface Props {
  id: string;
  size?: string; //sm:30% md 50% lg:75% full: 100%
  title?: string;
}

const { id, size = 'sm', title } = Astro.props;

const sizeMap = { sm: 'w-1/3', md: 'w-1/2', lg: 'w-1/4', full: 'w-full' };
const sizeClass = sizeMap[size];
---

<div x-data="{}" x-init="$el.classList.remove('hidden')" class="hidden">
  <div x-cloak x-show={`modal == '${id}'`} x-transition.opacity class="fixed inset-0 z-50 bg-slate-900/75"></div>

  <div x-cloak x-show={`modal == '${id}'`} x-transition class="fixed inset-0 z-50 flex items-center justify-center">
    <div class="modal-wrapper w-full min-h-full flex items-center justify-center py-8">
      <div
        @click.away="modal = null"
        class:list={['rounded-lg border-b-4 border-primary bg-white shadow-lg p-6 md:p-8 relative', sizeClass]}
        role="alert"
      >
        <div class="absolute top-0 right-0 translate-x-14 -translate-y-1/3">
          <img src={getAsset('/assets/feather.svg')} class="h-24" alt="infospeaks feather" />
        </div>
        <div class="flex items-center gap-4">
          {title ? <p class="font-bold md:text-2xl text-lg" set:html={title} /> : null}
        </div>

        <div class="modal-body">
          <slot />
        </div>

        <slot name="action">
          <div class="mt-6 sm:flex sm:gap-4">
            <a
              class="inline-block w-full rounded-lg bg-blue-500 px-5 py-3 text-center text-sm font-semibold text-white sm:w-auto"
              href=""
            >
              Do it
            </a>

            <a
              class="mt-2 inline-block w-full rounded-lg bg-gray-50 px-5 py-3 text-center text-sm font-semibold text-gray-500 sm:mt-0 sm:w-auto"
              href=""
            >
              Cancel
            </a>
          </div>
        </slot>
      </div>
    </div>
  </div>
</div>
