---
import { Icon } from 'astro-icon';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [] } = Astro.props;
---

<footer class:list={['dark relative border-t border-gray-200 dark:border-slate-800 p-8 pb-0']}>
  <div class="bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-50">
    <div class="md:flex md:justify-center">
      <ul class="md:flex gap-8">
        <li class="flex gap-2.5 items-center">
          <div class="border-2 rounded-full p-1.5">
            <Icon name="tabler:map-pin" class="w-4 h-4" />
          </div>
          <span>33.05 River Panaroma, 89 Hoang Quoc Viet street, Phu My ward, District 7, HCMC</span>
        </li>
        <li class="flex gap-2.5 items-center">
          <div class="border-2 rounded-full p-1.5">
            <Icon name="tabler:phone-call" class="w-4 h-4" />
          </div><a href="tel:+84707735216">(+84) 0707735216</a>
        </li>
        <li class="flex gap-2.5 items-center">
          <div class="border-2 rounded-full p-1.5">
            <Icon name="tabler:mail" class="w-4 h-4" />
          </div><a href="mailto:cs@infospeaks.com">cs@infospeaks.com</a>
        </li>
      </ul>
    </div>
    <div class="md:flex md:items-center md:justify-center md:py-2.5">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class=" hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }
    </div>
    <div x-data="{}" class="text-center border-t border-slate-500/50 py-4">
      Â©<span x-text="new Date().getFullYear()"></span> A Product of Info Speaks.Co
    </div>
  </div>
</footer>
