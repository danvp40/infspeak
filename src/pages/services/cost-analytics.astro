---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import ServiceTimeline from '~/components/widgets/ServiceTimeline.astro';
import ServiceNavigation from '~/components/widgets/ServiceNavigation.astro';

import { headerData } from '~/data';
import { getAsset } from '~/utils/permalinks';

const meta = {
  title: 'Cost Analytics - Info Speaks',
};

const data = {
  navigation: {
    center_label: 'COST ANALYTICS',
    items: [
      { href: '#flash', label: 'flash', image: getAsset('/assets/services/cost-analytics/nav/flash.png') },
      { href: '#change', label: 'change', image: getAsset('/assets/services/cost-analytics/nav/change.png') },
      {
        href: '#allocation',
        label: 'allocation',
        image: getAsset('/assets/services/cost-analytics/nav/allocation.png'),
      },
      {
        href: '#value-chain',
        label: 'Value chain',
        image: getAsset('/assets/services/cost-analytics/nav/value-chain.png'),
      },
      {
        href: '#breakevent-point',
        label: 'Breakevent point',
        image: getAsset('/assets/services/cost-analytics/nav/breakevent-point.png'),
      },
      {
        href: '#experience-curve',
        label: 'experience curve',
        image: getAsset('/assets/services/cost-analytics/nav/experience-curve.png'),
      },
    ],
  },
  services: [
    { id: 'flash', charts: [1, 2].map((i) => getAsset(`/assets/services/cost-analytics/${i}.png`)) },
    { id: 'change', charts: [3, 4, 5, 6].map((i) => getAsset(`/assets/services/cost-analytics/${i}.png`)) },
    { id: 'allocation', charts: [7, 8].map((i) => getAsset(`/assets/services/cost-analytics/${i}.png`)) },
    { id: 'value-chain', charts: [9, 10].map((i) => getAsset(`/assets/services/cost-analytics/${i}.png`)) },
    { id: 'breakevent-point', charts: [11].map((i) => getAsset(`/assets/services/cost-analytics/${i}.png`)) },
    { id: 'experience-curve', charts: [12, 13].map((i) => getAsset(`/assets/services/cost-analytics/${i}.png`)) },
  ],
};
---

<Layout {meta}>
  <Fragment slot="header">
    <Header {...headerData} position="left" />
  </Fragment>

  <div class="flex flex-col lg:flex-row">
    <ServiceNavigation data={data.navigation} />

    <ServiceTimeline services={data.services} />
  </div>
</Layout>
